<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Durakathana.com</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/styles.css" />

    <script src="/js/scripts.js"></script>
  </head>
  <body>
    <!-- Header -->
    <%- include('partials/header') %>

    <!-- Main Content -->
    <main>
      <!-- top title, search bar section -->
      <section>
        <div
          class="spacer"
          style="height: 3px; background-color: rgb(27, 41, 173)"
        ></div>
        <h1 class="text-center text-light bg-primary py-2 text-xs">
          Mobile phone reviews Sri Lanka
        </h1>
        <div class="container d-flex justify-content-center">
          <div class="row mx-2">
            <form class="form-check-inline col-sm-9 my-2 d-flex">
              <input
                class="form-control mx-2"
                type="search"
                placeholder="Type the model..."
                aria-label="Search"
              />
              <a
                class="btn btn-outline-secondary mx-2"
                href="/search"
                role="button"
                >Search</a
              >
            </form>
            <div class="dropdown col-12 col-sm-2 my-2 text-center">
              <button
                class="btn btn-outline-primary dropdown-toggle"
                type="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Select Brand
              </button>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Apple</a></li>
                <li><a class="dropdown-item" href="#">Samsung</a></li>
                <li><a class="dropdown-item" href="#">Xiaomi</a></li>
                <li><a class="dropdown-item" href="#">Sony</a></li>
                <li><a class="dropdown-item" href="#">Google</a></li>
                <li><a class="dropdown-item" href="#">Nokia</a></li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- top rankings section-->
      <section>
        <h2 class="text text-dark bg-primary-subtle px-4 py-2 fs-5">
          Top rankings
        </h2>

        <div class="container-md">
          <div class="row row-cols-2 row-cols-sm-4 g-2 px-lg-5 mx-lg-5">
            <!--loop for show top ranking phone cardViews-->
            <% phones.forEach((phone) => { %> <%-
            include('partials/phone-info-card', {model : phone.model, img:
            phone.img}) %> <% }); %>
          </div>
        </div>
      </section>

      <!-- most reviewed section -->
      <section>
        <h2 class="text text-dark bg-primary-subtle px-4 py-2 mt-2 fs-5">
          Most Reviewed
        </h2>
        <div class="container-md">
          <div class="row row-cols-2 row-cols-sm-4 g-2 px-lg-5 mx-lg-5">
            <!--loop for show most reviewed phones cardViews-->
            <% phones.forEach((phone) => { %> <%-
            include('partials/phone-info-card', {model : phone.model, img:
            phone.img}) %> <% }); %>
          </div>
        </div>
      </section>

      <!-- latest user reviews section -->
      <section>
        <h2 class="text text-dark bg-primary-subtle px-4 py-2 mt-2 fs-5">
          Latest Reviews
        </h2>
        <div class="container-md">
          <div class="row row-cols-1 row-cols-sm-2 g-2 px-lg-5 mx-lg-5">
            <%- include('partials/first-page-review', 
            {model: 'Nokia3.4',
            userName: 'santa', 
            review: 'ෆෝන් එක නම් හොදය් හැබැය් සමහර ඒවා වල Fringer Print issue එනවා. තව සමහර වෙලාවල් වලට Display එකත් අවුල් යනවා. ගන්නකොට හොද චාජරේකුත් ගනින් '}) %>
          </div>
        </div>
      </section>
    </main>

    <%- include('partials/footer') %>

    <!-- Bootstrap JS and your custom JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
